PI = 3.14
radius = float(input("7:"))
area = PI * radius * radius
print(f"Area of a circle = {area:.2f}")
from math import pi

def calculate_area(radius):
    return pi * radius ** 2

user_radius = float(input("7:"))
circle_area = calculate_area(user_radius)
print(f"Area of a circle = {circle_area:.2f}")
